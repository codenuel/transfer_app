extends layout

block content
    .main-container
        .container
            br
            h1 #{title}
            
            //- i.fas.fa-4x.fa-wallet
            //- i.fas.fa-2x.fa-exchange-alt
            h3.repayTxt Send money across Nigeria with ease
            p.txt Transfer with just the click of a button...
            br
            
            //- a.btn.btn-primary.singleT(href='/paymentform', role='button') SINGLE TRANSFER

            //- a.btn.btn-primary.bulkT(href='/', role='button') BULK TRANSFER
            .row.justify-content-md-center.inputContainer
                .input-group.mb-3.col-md-8.justify-content-md-center
                    //- span.input-group-text.nairaField &#8358;
                    input.form-control.inputAmount#amount(type='number', placeholder='Amount to Send', aria-label='Amount', aria-describedby='basic-addon2')
                    button.btn.btn-outline-success.amountBtn(type='button', data-toggle='modal', data-target='#Modal-1', data-whatever='@mdo') Send Money

                #Modal-1.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                    .modal-dialog(role='document')
                        .modal-content
                            .modal-header
                                h5#exampleModalLabel.modal-title Transfer Details
                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            .modal-body
                                form
                                .form-group
                                    label.col-form-label(for='sender-email') Senders Email Address:
                                    input#rsender-email.form-control(type='email', name='sender_email')
                                .form-group
                                    label.col-form-label(for='recipient-bank') Recipient's Bank:
                                    select#recipient-bank.form-control( name='bank_name')
                                        each bank in banks
                                            option(value=bank.code) #{bank.name}
                                .form-group
                                    label.col-form-label(for='recipient-account') Recipient's Account Number:
                                    input#recipient-account.form-control.inputAccount(type='number', name='account_number')
                                .form-group
                                    label.col-form-label(for='message-text') Description:
                                    textarea#message-text.form-control(name='description')
                            .modal-footer
                                //- button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                                button#btn-continue.btn.btn-success(type='button' href="") Continue

                                
